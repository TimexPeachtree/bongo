# -*- Makefile -*-
sbin_PROGRAMS += bongo-backup

bongo_backup_SOURCES =			\
	src/apps/backup/backup.h	\
	src/apps/backup/backup.c

bongo_backup_CPPFLAGS = $(AM_CPPFLAGS)	\
	$(SQLITE_CFLAGS)

bongo_backup_LDADD =					   \
	libbongonmap.la					   \
	libbongomsgapi.la				   \
	libbongologger.la				   \
	libbongoconnio.la				   \
	libbongomemmgr.la				   \
	libbongoutil.la					   \
	libbongoxpl.la					   \
	$(top_builddir)/import/log4c/log4c/libbongolog4c.la \
	$(PTHREAD_LIBS)					   \
	$(SQLITE_LIBS)					   \
	$(ALL_LIBS)

src/apps/backup/all: bongo-backup
src/apps/backup/clean: clean
src/apps/backup/install:
	@cd $(top_builddir) && $(MAKE) $(MFLAGS) sbin_PROGRAMS=bongo-backup install-sbinPROGRAMS
