# -*- Makefile -*-
sbin_PROGRAMS += bongo-stats

bongo_stats_SOURCES :=			\
	src/apps/stats/stats.h		\
	src/apps/stats/stats.c		\
	src/apps/stats/unix-ui.c

bongo_stats_LDADD :=					   \
	libbongomsgapi.la				   \
	libbongomdb.la					   \
	libbongoconnio.la				   \
	libbongomemmgr.la				   \
	libbongoxpl.la					   \
	$(top_builddir)/import/log4c/log4c/libbongolog4c.la \
	$(PTHREAD_LIBS)					   \
	$(ALL_LIBS)

src/apps/stats/all: bongo-stats
src/apps/stats/clean: clean
src/apps/stats/install:
	@cd $(top_builddir) && $(MAKE) $(MFLAGS) sbin_PROGRAMS=bongo-stats install-sbinPROGRAMS
