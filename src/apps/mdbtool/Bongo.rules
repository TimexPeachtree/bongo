# -*- Makefile -*-
sbin_PROGRAMS += mdbtool

mdbtool_SOURCES :=  \
	src/apps/mdbtool/mdbtool.c

mdbtool_LDADD :=				\
	libbongomdb.la				\
	libbongomemmgr.la			\
	libbongoconnio.la			\
	$(PTHREAD_LIBS)				\
	$(ALL_LIBS)

src/apps/mdbtool/all: mdbtool
src/apps/mdbtool/clean: clean
src/apps/mdbtool/install:
	@cd $(top_builddir) && $(MAKE) $(MFLAGS) sbin_PROGRAMS=mdbtool install-sbinPROGRAMS
