# -*- Makefile -*-
pkgpythonadmintooldir := $(pkgpythondir)/admintool
pkgpythonadmintool_PYTHON :=					\
	src/apps/admin/bongo/admintool/__init__.py		\
	src/apps/admin/bongo/admintool/AgentCommands.py		\
	src/apps/admin/bongo/admintool/DemoCommands.py		\
	src/apps/admin/bongo/admintool/CmdUtil.py		\
	src/apps/admin/bongo/admintool/MdbUtil.py		\
	src/apps/admin/bongo/admintool/ServerCommands.py	\
	src/apps/admin/bongo/admintool/SetupCommands.py 	\
	src/apps/admin/bongo/admintool/UserCommands.py

src/apps/admin/bongo-admin: $(top_builddir)/src/libs/python/bongo-python-wrapper
	$(INSTALL) -m 755 $< $@

sbin_SCRIPTS += src/apps/admin/bongo-admin
dist_pkglibexec_SCRIPTS += src/apps/admin/bongo-admin.py

dist_noinst_DATA += src/apps/admin/bongo/__init__.py

CLEANFILES +=					\
	src/apps/admin/bongo-admin		\
	src/apps/admin/*.pyc		\
	src/apps/admin/bongo/*.pyc		\
	src/apps/admin/bongo/admintool/*.pyc

src/apps/admin/all:
src/apps/admin/clean: clean
src/apps/admin/install:
	@cd $(top_builddir) && $(MAKE) $(MFLAGS) \
		dist_sbin_SCRIPTS=src/apps/admin/bongo-admin \
		dist_pkglibexec_SCRIPTS=src/apps/admin/bongo-admin.py \
		install-dist_sbinSCRIPTS install-pkgpythonadmintoolPYTHON
