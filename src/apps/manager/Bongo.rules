# -*- Makefile -*-
sbin_PROGRAMS += bongo-manager

bongo_manager_SOURCES := \
	src/apps/manager/manager.c

bongo_manager_LDADD :=					   \
        libbongonmap.la                                    \
	libbongomsgapi.la				   \
	libbongoconnio.la				   \
	libbongomemmgr.la				   \
    libbongo-json.la                     \
	libbongoxpl.la					   \
	$(top_builddir)/import/log4c/log4c/libbongolog4c.la \
	$(PTHREAD_LIBS)					   \
	$(ALL_LIBS)

src/apps/manager/all: bongo-manager
src/apps/manager/clean: clean
src/apps/manager/install:
	@cd $(top_builddir) && $(MAKE) $(MFLAGS) sbin_PROGRAMS=bongo-manager install-sbinPROGRAMS
