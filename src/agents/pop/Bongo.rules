# -*- Makefile -*-
sbin_PROGRAMS += bongopop3

bongopop3_SOURCES =				\
	src/agents/pop/pop3.c			\
	src/agents/pop/pop3.h

bongopop3_LDADD =					   \
	libbongonmap.la					   \
	libbongomsgapi.la				   \
	libbongologger.la				   \
	libbongoconnio.la				   \
	libbongomemmgr.la				   \
	libbongoutil.la					   \
	libbongoxpl.la					   \
	$(top_builddir)/import/log4c/log4c/libbongolog4c.la \
	$(PTHREAD_LIBS)					   \
	$(ALL_LIBS)

src/agents/pop/all: bongopop3
src/agents/pop/clean: clean
src/agents/pop/install:
	@cd $(top_builddir) && $(MAKE) $(MFLAGS) sbin_PROGRAMS=bongopop3 install-sbinPROGRAMS
