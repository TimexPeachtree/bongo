# -*- Makefile -*-
sbin_PROGRAMS += bongodmc

bongodmc_SOURCES :=				\
	src/agents/dmc/dmc.c			\
	src/agents/dmc/dmc-unix.c		\
	src/agents/dmc/dmcp.h

bongodmc_CPPFLAGS := $(AM_CPPFLAGS) \
	-DWEBADMIN_MODULE_SYMBOL=BongoDMC

bongodmc_LDADD :=					   \
	libbongomsgapi.la				   \
	libbongomdb.la					   \
	libbongologger.la				   \
	libbongomemmgr.la				   \
	libbongoconnio.la				   \
	libbongoutil.la					   \
	libbongoxpl.la					   \
	$(top_builddir)/import/log4c/log4c/libbongolog4c.la \
	$(PTHREAD_LIBS)					   \
	$(ALL_LIBS)

src/agents/dmc/all: bongodmc
src/agents/dmc/clean: clean
src/agents/dmc/install:
	@cd $(top_builddir) && $(MAKE) $(MFLAGS) sbin_PROGRAMS=bongodmc install-sbinPROGRAMS
