# -*- Makefile -*-
sbin_PROGRAMS += bongorules

bongorules_SOURCES :=				\
	src/agents/rules/rules.c		\
	src/agents/rules/rules.h		\
	src/agents/rules/management.c		\
	src/agents/rules/stream.c

bongorules_LDADD :=					   \
	libbongonmap.la					   \
	libbongomanagement.la				   \
	libbongostreamio.la				   \
	libbongomsgapi.la				   \
	libbongomdb.la					   \
	libbongologger.la				   \
	libbongoconnio.la				   \
	libbongomemmgr.la				   \
	libbongoutil.la					   \
	libbongoxpl.la					   \
	$(top_builddir)/import/log4c/log4c/libbongolog4c.la \
	$(PTHREAD_LIBS)					   \
	$(ALL_LIBS)

src/agents/rules/all: bongorules
src/agents/rules/clean: clean
src/agents/rules/install:
	@cd $(top_builddir) && $(MAKE) $(MFLAGS) sbin_PROGRAMS=bongorules install-sbinPROGRAMS
