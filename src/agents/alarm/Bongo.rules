# -*- Makefile -*-
sbin_PROGRAMS += bongoalarm

bongoalarm_SOURCES :=				\
	src/agents/alarm/alarm.c		\
	src/agents/alarm/alarm.h		

bongoalarm_LDADD :=						   \
	libbongonmap.la						   \
	libbongocal.la						   \
	libbongomsgapi.la					   \
	libbongologger.la					   \
	libbongoconnio.la					   \
	libbongomemmgr.la					   \
	libbongostreamio.la					   \
	libbongoutil.la						   \
	libbongoxpl.la						   \
	$(top_builddir)/import/log4c/log4c/libbongolog4c.la	   \
	$(top_builddir)/import/libical/src/libical/libical-bongo.la \
	$(LIBCURL_LIBS)						   \
	$(PTHREAD_LIBS)						   \
	$(ALL_LIBS)


install-data-hook::
	$(mkinstalldirs) $(DESTDIR)$(XPL_DEFAULT_CACHE_DIR)/alarm

src/agents/alarm/all: bongoalarm
src/agents/alarm/clean: clean
src/agents/alarm/install:
	@cd $(top_builddir) && $(MAKE) $(MFLAGS) sbin_PROGRAMS=bongoalarm install-sbinPROGRAMS
