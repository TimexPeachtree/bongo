# -*- Makefile -*-
sbin_PROGRAMS += bongosmtp bongosmtpc

bongosmtp_SOURCES =				\
	src/agents/smtp/smtpd.c			\
	src/agents/smtp/smtp.h			\
	src/agents/smtp/smtpd.h

bongosmtp_LDADD =					   \
	libbongonmap.la					   \
	libbongomsgapi.la				   \
	libbongologger.la				   \
	libbongoconnio.la				   \
	libbongomemmgr.la				   \
	libbongoutil.la					   \
	libbongoxpl.la					   \
	$(top_builddir)/import/log4c/log4c/libbongolog4c.la \
	$(PTHREAD_LIBS)					   \
	$(ALL_LIBS)

bongosmtpc_SOURCES =				\
	src/agents/smtp/smtpc.c			\
	src/agents/smtp/smtp.h			\
	src/agents/smtp/smtpc.h

bongosmtpc_LDADD =					   \
	libbongonmap.la					   \
	libbongomsgapi.la				   \
	libbongologger.la				   \
	libbongoconnio.la				   \
	libbongomemmgr.la				   \
	libbongoutil.la					   \
	libbongoxpl.la					   \
	$(top_builddir)/import/log4c/log4c/libbongolog4c.la \
	$(PTHREAD_LIBS)					   \
	$(ALL_LIBS)

src/agents/smtp/all: bongosmtp bongosmtpc
src/agents/smtp/clean: clean
src/agents/smtp/install:
	@cd $(top_builddir) && $(MAKE) $(MFLAGS) sbin_PROGRAMS=bongosmtp install-sbinPROGRAMS
    @cd $(top_builddir) && $(MAKE) $(MFLAGS) sbin_PROGRAMS=bongosmtpc install-sbinPROGRAMS
