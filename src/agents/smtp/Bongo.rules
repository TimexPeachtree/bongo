# -*- Makefile -*-
sbin_PROGRAMS += bongosmtp

bongosmtp_SOURCES :=				\
	src/agents/smtp/smtpd.c			\
	src/agents/smtp/smtpd.h

bongosmtp_LDADD :=					   \
	libbongonmap.la					   \
	libbongomanagement.la				   \
	libbongomsgapi.la				   \
	libbongomdb.la					   \
	libbongologger.la				   \
	libbongoconnio.la				   \
	libbongomemmgr.la				   \
	libbongoutil.la					   \
	libbongoxpl.la					   \
	$(top_builddir)/import/log4c/log4c/libbongolog4c.la \
	$(PTHREAD_LIBS)					   \
	$(ALL_LIBS)

src/agents/smtp/all: bongosmtp
src/agents/smtp/clean: clean
src/agents/smtp/install:
	@cd $(top_builddir) && $(MAKE) $(MFLAGS) sbin_PROGRAMS=bongosmtp install-sbinPROGRAMS
