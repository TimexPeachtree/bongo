# -*- Makefile -*-
sbin_PROGRAMS += bongoantispam

bongoantispam_SOURCES :=				\
	src/agents/antispam/antispam.c		\
	src/agents/antispam/antispam.h		\
	src/agents/antispam/spamd.c		

bongoantispam_LDADD :=					   \
	libbongonmap.la					   \
	libbongomsgapi.la				   \
	libbongologger.la				   \
	libbongoconnio.la				   \
	libbongomemmgr.la				   \
	libbongoutil.la					   \
	libbongoxpl.la					   \
    libbongo-json.la                    \
	$(top_builddir)/import/log4c/log4c/libbongolog4c.la \
	$(PTHREAD_LIBS)					   \
	$(ALL_LIBS)

src/agents/antispam/all: bongoantispam
src/agents/antispam/clean: clean
src/agents/antispam/install:
	@cd $(top_builddir) && $(MAKE) $(MFLAGS) sbin_PROGRAMS=bongoantispam install-sbinPROGRAMS
